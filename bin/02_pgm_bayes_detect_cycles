#!/usr/bin/env ruby

# Add lib directory to front of include path
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

require 'mini_pgm'

#
#  Model 1
#  =======
#
#  A -> B -> C -> D
#       ^         |
#       |---------|
#
model1 = MiniPGM::BayesianNetwork.new(
  MiniPGM::Edge.new('A', 'B'),
  MiniPGM::Edge.new('B', 'C'),
  MiniPGM::Edge.new('C', 'D'),
  MiniPGM::Edge.new('D', 'B'),
)

puts model1
puts

puts "Error: #{model1.error}" unless model1.valid?
puts

#
#  Model 2
#  =======
#
#  A --|
#  ^   |
#  |---|
#
model2 = MiniPGM::BayesianNetwork.new(
  MiniPGM::Edge.new('A', 'A')
)

puts model2
puts

puts "Error: #{model2.error}" unless model2.valid?
